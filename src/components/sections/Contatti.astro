---
import { CONTACT_SUBJECTS, COMPANY_INFO } from '@lib/constants';
---

<section id="contatti" class="py-20 lg:py-32 bg-background">
  <div class="container mx-auto px-4 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
      <!-- Content -->
      <div class="animate-on-scroll">
        <h2 class="font-display text-3xl md:text-4xl lg:text-5xl font-bold text-text-primary mb-6">
          <span class="text-accent">Contattaci</span>
        </h2>
        <p class="text-text-secondary text-lg leading-relaxed mb-8">
          Hai domande, proposte o vuoi saperne di più? Compila il form
          e ti risponderemo al più presto.
        </p>

        <!-- Alternative Contact -->
        <div class="space-y-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-accent/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <a href={`mailto:${COMPANY_INFO.email}`} class="text-text-primary hover:text-accent transition-colors">
              {COMPANY_INFO.email}
            </a>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-accent/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
            </div>
            <a href={COMPANY_INFO.whatsappLink} target="_blank" rel="noopener noreferrer" class="text-text-primary hover:text-accent transition-colors">
              {COMPANY_INFO.whatsapp}
            </a>
          </div>
        </div>
      </div>

      <!-- Form -->
      <div class="animate-on-scroll" style="animation-delay: 100ms;">
        <form
          id="contact-form"
          class="bg-surface rounded-xl p-6 lg:p-8 border border-border relative"
          novalidate
        >
          <!-- Honeypot (hidden) -->
          <div class="absolute -left-[9999px]" aria-hidden="true">
            <input type="text" name="website" tabindex="-1" autocomplete="off" />
          </div>

          <div class="space-y-6">
            <!-- Nome -->
            <div>
              <label for="name" class="block text-sm font-medium text-text-primary mb-2">
                Nome <span class="text-error">*</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                maxlength="100"
                class="w-full h-12 px-4 bg-background border border-border rounded-lg text-text-primary placeholder-text-secondary/50 focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all"
                placeholder="Il tuo nome"
              />
              <p id="name-error" class="mt-1 text-sm text-error hidden"></p>
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium text-text-primary mb-2">
                Email <span class="text-error">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full h-12 px-4 bg-background border border-border rounded-lg text-text-primary placeholder-text-secondary/50 focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all"
                placeholder="nome@esempio.com"
              />
              <p id="email-error" class="mt-1 text-sm text-error hidden"></p>
            </div>

            <!-- Telefono -->
            <div>
              <label for="phone" class="block text-sm font-medium text-text-primary mb-2">
                Telefono
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                maxlength="20"
                class="w-full h-12 px-4 bg-background border border-border rounded-lg text-text-primary placeholder-text-secondary/50 focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all"
                placeholder="+39 123 456 7890"
              />
            </div>

            <!-- Oggetto -->
            <div>
              <label for="subject" class="block text-sm font-medium text-text-primary mb-2">
                Oggetto <span class="text-error">*</span>
              </label>
              <select
                id="subject"
                name="subject"
                required
                class="w-full h-12 px-4 bg-background border border-border rounded-lg text-text-primary focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all appearance-none cursor-pointer"
              >
                <option value="" disabled selected>Seleziona un argomento</option>
                {CONTACT_SUBJECTS.map((opt) => (
                  <option value={opt.value}>{opt.label}</option>
                ))}
              </select>
              <p id="subject-error" class="mt-1 text-sm text-error hidden"></p>
            </div>

            <!-- Messaggio -->
            <div>
              <label for="message" class="block text-sm font-medium text-text-primary mb-2">
                Messaggio <span class="text-error">*</span>
              </label>
              <textarea
                id="message"
                name="message"
                required
                maxlength="2000"
                rows="5"
                class="w-full px-4 py-3 bg-background border border-border rounded-lg text-text-primary placeholder-text-secondary/50 focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all resize-none"
                placeholder="Scrivi il tuo messaggio..."
              ></textarea>
              <p id="message-error" class="mt-1 text-sm text-error hidden"></p>
            </div>

            <!-- Submit -->
            <button
              type="submit"
              id="submit-btn"
              class="w-full h-12 bg-accent text-background font-semibold rounded-lg hover:bg-accent-hover transition-colors disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center gap-2"
            >
              <span id="submit-text">Invia messaggio</span>
              <svg id="submit-spinner" class="w-5 h-5 animate-spin hidden" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </button>
          </div>

          <!-- Success/Error Messages -->
          <div id="form-success" class="hidden mt-6 p-4 bg-success/10 border border-success/30 rounded-lg">
            <p class="text-success font-medium">Messaggio inviato con successo! Ti risponderemo al più presto.</p>
          </div>
          <div id="form-error" class="hidden mt-6 p-4 bg-error/10 border border-error/30 rounded-lg">
            <p class="text-error font-medium">Si è verificato un errore. Prova a contattarci via WhatsApp.</p>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  import { initContactForm } from '@scripts/contact-form';
  initContactForm();
</script>
