---
import Button from '@components/ui/Button.astro';
import { INVESTOR_POINTS } from '@lib/constants';

const icons: Record<string, string> = {
  'trending-up': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />`,
  'puzzle': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />`,
  'star': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />`,
  'scale': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />`,
};
---

<section id="investitori" class="py-20 lg:py-32 bg-background">
  <div class="container mx-auto px-4 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Content -->
      <div class="animate-on-scroll">
        <h2 class="font-display text-3xl md:text-4xl lg:text-5xl font-bold text-text-primary mb-6">
          Opportunità per <span class="text-accent">Investitori</span>
        </h2>
        <p class="text-text-secondary text-lg leading-relaxed mb-8">
          Abitare Holding rappresenta un'opportunità unica per investire nel
          proptech italiano. Un gruppo solido, con un modello di business innovativo
          e un team con competenze complementari.
        </p>
        <Button href="#contatti?subject=investment" size="lg">
          Parliamo di investimenti
        </Button>
      </div>

      <!-- Points Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        {INVESTOR_POINTS.map((punto, index) => (
          <div
            class="bg-surface/50 rounded-lg p-6 border border-border/50 animate-on-scroll"
            style={`animation-delay: ${index * 100}ms;`}
          >
            <div class="w-10 h-10 rounded-full bg-accent/10 flex items-center justify-center mb-4">
              <svg
                class="w-5 h-5 text-accent"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                set:html={icons[punto.icon]}
              />
            </div>
            <h3 class="font-semibold text-text-primary mb-2">{punto.title}</h3>
            <p class="text-text-secondary text-sm leading-relaxed">{punto.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
