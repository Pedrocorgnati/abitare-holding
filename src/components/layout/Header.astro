---
import Navigation from './Navigation.astro';
import { COMPANY_INFO } from '@lib/constants';
---

<header class="fixed top-0 left-0 right-0 z-50 bg-background/90 backdrop-blur-md border-b border-border/50">
  <div class="container mx-auto px-4 lg:px-8">
    <div class="flex items-center justify-between h-16 lg:h-20">
      <!-- Logo -->
      <a href="#" class="flex items-center" aria-label="Torna alla home">
        <span class="font-display text-xl lg:text-2xl font-bold text-accent">
          ABITARE
        </span>
        <span class="font-display text-xl lg:text-2xl font-light text-text-primary ml-1">
          Holding
        </span>
      </a>

      <!-- Navigation Desktop -->
      <Navigation class="hidden lg:flex" />

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="lg:hidden p-2 text-text-primary hover:text-accent transition-colors"
        aria-label="Apri menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
</header>
