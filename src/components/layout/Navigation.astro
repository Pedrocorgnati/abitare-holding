---
import { NAV_ITEMS } from '@lib/constants';

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<nav class={className}>
  <ul class="flex items-center gap-8">
    {NAV_ITEMS.map((item) => (
      <li>
        <a
          href={item.href}
          class="nav-link text-text-secondary font-medium text-sm hover:text-accent transition-colors relative"
        >
          {item.label}
        </a>
      </li>
    ))}
  </ul>
</nav>

<style>
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--color-accent);
    transition: width 150ms ease;
  }
  .nav-link:hover::after {
    width: 100%;
  }
</style>
