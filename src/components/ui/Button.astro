---
interface Props {
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  disabled?: boolean;
  class?: string;
  type?: 'button' | 'submit' | 'reset';
  [key: string]: any;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  disabled = false,
  class: className = '',
  type = 'button',
  ...rest
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center font-semibold rounded-lg transition-all duration-fast focus-visible:outline-2 focus-visible:outline-accent focus-visible:outline-offset-2';

const variantClasses = {
  primary: 'bg-accent text-background hover:bg-accent-hover active:bg-accent-active disabled:opacity-50 disabled:cursor-not-allowed',
  secondary: 'bg-transparent border-2 border-accent text-accent hover:bg-accent hover:text-background active:bg-accent-active disabled:opacity-50 disabled:cursor-not-allowed',
  ghost: 'bg-transparent text-accent hover:bg-accent-light active:bg-accent-light disabled:opacity-50 disabled:cursor-not-allowed',
};

const sizeClasses = {
  sm: 'h-9 px-4 text-sm',
  md: 'h-11 px-6 text-base',
  lg: 'h-13 px-8 text-lg',
};

const classes = [baseClasses, variantClasses[variant], sizeClasses[size], className].join(' ');

const isExternal = href?.startsWith('http');
---

{href ? (
  <a
    href={href}
    class={classes}
    target={isExternal ? '_blank' : undefined}
    rel={isExternal ? 'noopener noreferrer' : undefined}
    {...rest}
  >
    <slot />
  </a>
) : (
  <button
    type={type}
    class={classes}
    disabled={disabled}
    {...rest}
  >
    <slot />
  </button>
)}
